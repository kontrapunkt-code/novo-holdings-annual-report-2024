{
	"name": "novo-holdings-annual-report-2024",
	"version": "1.0.0",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.2.2",
		"npm-check-updates": "^17.1.14",
		"prettier": "^3.5.0",
		"prettier-plugin-astro": "^0.14.1",
		"turbo": "^2.4.1"
	},
	"packageManager": "bun@1.2.2",
	"prettier": {
		"experimentalTernaries": true,
		"experimentalOperatorPosition": "start",
		"overrides": [
			{
				"files": "*.astro",
				"options": {
					"parser": "astro"
				}
			}
		],
		"plugins": [
			"prettier-plugin-astro"
		],
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"check": "turbo run check",
		"deploy": "turbo run deploy --filter=@novo-holdings-annual-report-2024/studio",
		"dev": "turbo run dev",
		"reinstall": "rm -rf node_modules && rm -rf apps/web/node_modules && rm -rf apps/studio/node_modules && rm -rf apps/lib/node_modules && rm bun.lock && bun i",
		"typegen": "turbo run typegen",
		"update-deps": "ncu -u --format group -i && cd apps/web && bun run update-deps && cd ../studio && bun run update-deps && cd ../lib && bun run update-deps && cd ../.."
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@carbon/icon-helpers",
		"@carbon/icons-react",
		"esbuild",
		"msgpackr-extract",
		"sharp"
	],
	"type": "module",
	"workspaces": [
		"apps/*"
	]
}
