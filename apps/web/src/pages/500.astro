---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout title="Server Error">
	<div class="flex min-h-[50vh] items-center justify-center">
		<div class="mx-auto max-w-2xl px-4 text-center">
			<h1 class="mb-4 text-4xl font-bold md:text-6xl">500</h1>
			<p class="mb-8 text-xl text-gray-600 md:text-2xl">
				Something went wrong on our end. Please try again later.
			</p>
			<div class="space-x-4">
				<button
					onclick="window.location.reload()"
					class="inline-block rounded-lg bg-black px-8 py-3 text-white transition-colors hover:bg-gray-800"
				>
					Try Again
				</button>
				<a
					href="/"
					class="inline-block rounded-lg bg-gray-100 px-8 py-3 text-gray-800 transition-colors hover:bg-gray-200"
				>
					Go to Homepage
				</a>
			</div>
		</div>
	</div>
</PageLayout>
