---
import SanityImage from "@/components/astro/SanityImage.astro";
import CaseLayout from "@/layouts/CaseLayout.astro";
import type { PageModuleProps } from "@/scripts/queries";

type Props = PageModuleProps<"articleFigureModule">;

const { image, fullWidth } = Astro.props;
if (!image) return null;
---

<CaseLayout fullWidth={!!fullWidth}>
	<div class="overflow-hidden">
		<SanityImage
			{...image}
			alt=""
			width={fullWidth ? 1504 : 1200}
			class="h-full w-full rounded-lg object-cover"
			sizes="(min-width: 700px) 1504px, 100vw"
		/>
	</div>
</CaseLayout>
