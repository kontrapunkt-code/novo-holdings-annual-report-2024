---
import ArticleType from "@/components/astro/ArticleType.astro";
import CaseLayout from "@/layouts/CaseLayout.astro";
import type { PageModuleProps } from "@/scripts/queries";
import { PortableText } from "astro-portabletext";

type Props = PageModuleProps<"articleTextModule">;

const { content } = Astro.props;

if (!content?.length) return null;
---

<CaseLayout>
	<div class="article-text">
		<PortableText
			value={content}
			components={{
				type: ArticleType,
			}}
		/>
	</div>
</CaseLayout>
