---
import MainLayout from "@/layouts/MainLayout.astro";
import SectionLayout from "@/layouts/SectionLayout.astro";
import type { ModuleProps } from "@/scripts/types";

type Props = ModuleProps<"articleRelatedCasesModule">;

const { title, cases } = Astro.props;

if (!cases?.length) return null;
---

<SectionLayout>
	<MainLayout>
		<section class="py-16 px-4 bg-gray-50">
			<div class="max-w-7xl mx-auto">
				{title && <h2 class="text-3xl font-bold mb-8 text-center">{title}</h2>}
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					{
						cases.map((case_) => (
							<a href={`/${case_.slug}`} class="block group">
								<div class="bg-white rounded-lg overflow-hidden shadow-sm transition-shadow duration-300 group-hover:shadow-md">
									<div class="p-6">
										<h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
											{case_.title}
										</h3>
									</div>
								</div>
							</a>
						))
					}
				</div>
			</div>
		</section>
	</MainLayout>
</SectionLayout>
