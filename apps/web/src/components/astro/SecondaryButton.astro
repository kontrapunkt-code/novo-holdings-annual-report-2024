---
const { buttonText, link, textColor } = Astro.props;
---

<button
	type="button"
	class="text-white bg-novo-blue rounded-[0.5rem] py-[0.875rem] pl-[1rem] pr-[1.5rem] font-medium text-[1.125rem] leading-[140%] tracking-[1%]"
>
	<a class="flex items-center gap-[0.5rem]" href={link}>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="32"
			height="32"
			viewBox="0 0 24 24"
			><path fill="currentColor" d="M6.4 18L5 16.6L14.6 7H6V5h12v12h-2V8.4z"
			></path></svg
		>
		{buttonText}
	</a>
</button>
