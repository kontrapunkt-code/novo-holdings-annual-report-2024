---
import PrimaryButton from "@/components/astro/PrimaryButton.astro";
import type { GlobalSettings } from "@/scripts/queries";

type Props = GlobalSettings;
---

<footer class="bg-novo-blue text-white w-full">
	<div
		class="max-w-[100rem] mx-auto w-full grid gap-[12.5rem] px-[1.5rem] md:px-[3rem] py-[1.5rem] md:pb-[2.5rem]"
	>
		<div class="flex justify-between items-start">
			<div class="text-[2rem] md:text-[4rem] leading-[90%]">
				<p>novo<br /><span class="font-bold">holdings</span></p>
			</div>
			<PrimaryButton
				buttonText="Back to Main Site"
				link="/"
				icon="arrow_outward"
			/>
		</div>
		<nav>
			<ul
				class="max-w-[100rem] grid md:flex gap-4 md:gap-[2rem] font-medium text-[0.875rem] leading-[120%]"
			>
				<li>Privacy notice</li>
				<li>Code of Conduct</li>
				<li>Whistleblower</li>
				<li>Articles of association</li>
				<li>Policy on data ethics</li>
				<li>Electronic invoicing</li>
				<li>Diversity policy</li>
			</ul>
		</nav>
	</div>
</footer>
