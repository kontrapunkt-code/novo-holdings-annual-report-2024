---
import { buildSanityImage } from "@/scripts/image-url-builder";
import type { PAGES_QUERYResult } from "@novo-holdings-annual-report-2024/studio/types";
import { Image } from "astro:assets";

interface Props {
	image: NonNullable<
		NonNullable<PAGES_QUERYResult[number]>["heroImage"]
	>["asset"];
	alt: string;
	width?: number;
	height?: number;
	class?: string;
	sizes?: string;
}

const { image, alt, width, height, class: className, sizes } = Astro.props;

if (!image) return null;

const url = buildSanityImage(image, { width, height });
---

<Image src={url} alt={alt} inferSize class={className} sizes={sizes} />
